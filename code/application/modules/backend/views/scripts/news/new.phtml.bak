<div id="toTop">^ Back to Top</div> 
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        elements : "gContent",
        width: "659px",
        height: "300px",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste moxiemanager"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });

    document.domain = "<?php echo DOMAIN; ?>";
    $('.fileupload').fileupload({"name":"itemImage"});
    
    
    $(function() {
	$(window).scroll(function() {
            if($(this).scrollTop() != 0) {
                    $('#toTop').fadeIn();	
            } else {
                    $('#toTop').fadeOut();
            }
	});
 
	$('#toTop').click(function() {
		$('body,html').animate({scrollTop:0},800);
	});	
    });
    
    
    $('#btnAdd1').click(function() {

        var title  = $('#gTitle').val(); 
        var content  =  tinyMCE.get('gContent').getContent(); /*$('#gContent').val(); */
        var source  = $('#gSource').val(); 
        
        var sort  = $('#gSort').val(); 
        var active = $("input:radio[name='gDisplay']:checked").val();
        var ishot = $("input:radio[name='gIsHot']:checked").val();
        var image = $('#photoUploadResult .response .image_id').html();
       
        
        
        if (title =='') {
            alert('Please input News title!');
            return;
        }

         if (content =='') {
            alert('Please input News content!');
            return;
        }
        
        if (image == undefined) {
            image ='';
        } else {
            image = $('#photoUploadResult .response .image_id').html() + "." + $('#photoUploadResult .response .image_format').html();
        }
        

        var params = {
            title:title,
            content:content,
            source:source,
            ishot:ishot,
            image:image,
            active:active,
            sort: sort,
            id:0
        };

        $.post("<?php echo BASE_ADMIN_URL; ?>/news/add", params, function(result){
            if(result.error == 0)
            {
                window.location= '<?php echo BASE_ADMIN_URL; ?>/news/index/page/<?php echo $this->iPage;?>';
            }
            else
            {
                alert(result.message);
            }
        },'json');
        
    });
  
</script>