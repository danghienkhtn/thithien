<div id="toTop">^ Back to Top</div>
<script type="text/javascript">
    
    $(function() {
	$(window).scroll(function() {
		if($(this).scrollTop() != 0) {
			$('#toTop').fadeIn();	
		} else {
			$('#toTop').fadeOut();
		}
	});
 
	$('#toTop').click(function() {
		$('body,html').animate({scrollTop:0},800);
	});	
    });
    
    var reset = function()
    {
        $("#_jsPageSize").val("10");
        $("#_jsKeyword").val("");
        $("#_jsPage").val("1");
        $("#_jsType").val("0");
        
    };
    
    $("#_jsBtnReset").click(function(){
        reset();
        document.forms['filterform'].submit();
    });
    
    $("#_jsBtnSearch").click(function(){
         $("#_jsPage").val("1");
         document.forms['filterform'].submit();
    });
    
    $("#_jsBtnSubmit").click(function(){
         $("#_jsPage").val("1");
         document.forms['filterform'].submit();
    });
    
    
    $('#_jsKeyword').keypress(function(event){
 
	var keycode = (event.keyCode ? event.keyCode : event.which);
	if(keycode == '13'){
            $("#_jsPage").val("1");
	 }
	event.stopPropagation();
     });
    
    
    $(".btnDelete").click(function() {
        var id = $(this).attr('rel');

        if(id)
        {          
            if(confirm('Are you sure want to delete this news?'))
            {
                $.post("<?php echo BASE_ADMIN_URL; ?>/news/delete",{ id: id },function(result){
                    if(result.error == 0)
                    {
              
                       window.location= '<?php echo BASE_ADMIN_URL; ?>/news/index/page/<?php echo $this->iPage;?>';
                    }
                    else
                    {
                        alert(result.message);
                    }
                },'json');
            }
        }
    });
</script>