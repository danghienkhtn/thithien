        $('body').on('click','[data-action="group-delete"]', function(){
            if(confirm('Do you want to delete ?'))
            {

                var _this = $(this);
                var arrId = [_this.attr('data-value')];
                $.post("<?php  echo BASE_ADMIN_URL.'/group/delete'; ?>",{'group_id':arrId}, function(data){
                    if(data.error)
                    {
                        alert(data.message);
                    }
                    else{
                        groupTable
                            .row( _this.parents('tr') )
                            .remove()
                            .draw();
                    }

                },'json');
            }
        });

        $('body').on('click','[data-action="delete-groups"]', function(){
            if(confirm('Do you want to delete ?'))
            {
                var arrCheck = Array();
                var checkboxItems = $( '[data-action="check-delete"]');
                $.each(checkboxItems,function(index,value){
                    var element = $(this);
                    if(element.is(':checked'))
                        arrCheck.push(element.val());
                });
                if(arrCheck.length)
                {
                    $.post("<?php  echo BASE_ADMIN_URL.'/group/delete'; ?>",{'group_id':arrCheck}, function(){
                        $.each(checkboxItems,function(index,value) {
                            var _this = $(this);
                            groupTable
                                .row( _this.parents('tr') )
                                .remove();
                        });
                        $('[data-action="check-all"]').prop('checked',false);
                        groupTable.draw();
                    },'json');
                }

            }
        });
        $("div.group-type").prepend($('[data-hidden="group-type"]').html());
        $("div.delete-ids").prepend('<a href="javascript:void(0);"><i data-action="delete-groups" class="fa fa-trash fa-lg"></i><a>');
