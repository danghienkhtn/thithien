        // Apply the search
        groupTable.columns(0).every( function () {
            var that = this;
            $( '[data-action="search-by-type"]').on( 'change', function () {
                that
                    .search(this.value)
                    .draw();
            } );
        } );

        function doChecked(checkboxItems, checked){
            $.each(checkboxItems,function(index,value){
                $(this).prop('checked',checked);
            });
        }

    } );
